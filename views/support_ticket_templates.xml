<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="support_ticket_form_template" name="Support Form">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container">
                    <h1 class="mt-4">Support Center</h1>
                    <p>Let us know your problems or suggestions.</p>
                    <form action="/support/submit" method="POST" class="mt-4">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group">
                            <label for="your_name">Name</label>
                            <input type="text" class="form-control" name="your_name" required="1"/>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" required="1"/>
                        </div>
                        <div class="form-group">
                            <label for="description">Problem statement</label>
                            <textarea class="form-control" name="description" rows="5" required="1"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Send</button>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <template id="support_ticket_thank_you_template" name="Thanks">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container text-center mt-5">
                    <h1 class="mb-3">Thank you!</h1>
                    <p>Your application has been accepted. You will be contacted as soon as possible.</p>
                    <a href="/" class="btn btn-primary mt-3">Return to Home Page</a>
                </div>
            </div>
        </t>
    </template>
</odoo>